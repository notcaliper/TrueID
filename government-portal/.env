# DBIS Government Portal Environment Variables

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=15000
REACT_APP_ENABLE_CREDENTIALS=true

# Application Settings
REACT_APP_ENV=development
REACT_APP_PORT=8000
PORT=8000
REACT_APP_CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3

# Health Check Configuration
REACT_APP_HEALTH_CHECK_METHOD=GET
REACT_APP_HEALTH_CHECK_TIMEOUT=5000
REACT_APP_HEALTH_CHECK_PATH=/health

# Authentication
REACT_APP_AUTH_STORAGE_PREFIX=dbis_
REACT_APP_TOKEN_REFRESH_BUFFER=300000  # 5 minutes in milliseconds

# Feature Flags
REACT_APP_ENABLE_DEBUG_MODE=true
REACT_APP_ENABLE_MOCK_DATA=false

# API Endpoints
REACT_APP_LOGIN_ENDPOINT=/admin/login
REACT_APP_REFRESH_TOKEN_ENDPOINT=/admin/refresh-token
REACT_APP_PROFILE_ENDPOINT=/admin/profile

# Blockchain Settings
REACT_APP_BLOCKCHAIN_NETWORK=local
REACT_APP_LOCAL_RPC_URL=http://127.0.0.1:8545

# UI Configuration
REACT_APP_THEME=light
REACT_APP_ANIMATION_ENABLED=true
REACT_APP_SESSION_TIMEOUT=1800000  # 30 minutes in milliseconds